// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  email      String @unique
  name       String 
  image      String
  excersises String[]
}

model Exercises{
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  ownerEmail   String
  name      String @unique
  history   HistoricExercise[]
}

model Workouts{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  ownerEmail  String
  name        String @unique
  exercises   String[]  
}

type HistoricExercise{
  date DateTime
  weightLBS Int
  reps Int
  sets Int
}

type HistoricWorkout{
  dateCreated DateTime
  workoutCount Int
}